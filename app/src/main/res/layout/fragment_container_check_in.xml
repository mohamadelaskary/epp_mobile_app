<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Ui.Gate.ConfirmArrival.ConfirmArrival.ConfirmArrivalFragment">
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".Ui.Gate.ConfirmArrival.ConfirmArrival.ConfirmArrivalFragment">

    <TextView
        android:id="@+id/sales_order_number"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="5dp"
        android:text="123654789"
        app:layout_constraintEnd_toStartOf="@+id/date_icon"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/date_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="5dp"
        android:src="@drawable/ic_date"
        app:layout_constraintBottom_toBottomOf="@+id/agreement_date"
        app:layout_constraintEnd_toStartOf="@+id/agreement_date"
        app:layout_constraintTop_toTopOf="@+id/agreement_date" />

    <TextView
        android:id="@+id/agreement_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2025-10-28"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/sales_order_number" />

    <TextView
        android:id="@+id/customer_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Tricon Dry Chemicals  Italy"
        android:textSize="18sp"
        app:layout_constraintEnd_toStartOf="@+id/item_code"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sales_order_number" />

    <TextView
        android:id="@+id/item_code"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="FM525J10025"
        android:textSize="16sp"
        android:layout_marginStart="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/customer_name"
        app:layout_constraintTop_toTopOf="@+id/customer_name" />

    <ImageView
        android:id="@+id/plate_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_plate_number"
        app:layout_constraintBottom_toBottomOf="@+id/plate_no"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/plate_no" />

    <TextView
        android:id="@+id/plate_no"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginTop="16dp"
        android:text="abc-123"
        app:layout_constraintBottom_toBottomOf="@+id/containers"
        app:layout_constraintStart_toEndOf="@+id/plate_icon"
        app:layout_constraintTop_toBottomOf="@+id/customer_name" />

    <ImageView
        android:id="@+id/container_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:src="@drawable/ic_container"
        app:layout_constraintBottom_toBottomOf="@+id/containers"
        app:layout_constraintStart_toEndOf="@+id/plate_no"
        app:layout_constraintTop_toTopOf="@+id/containers" />

    <TextView
        android:id="@+id/containers"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:layout_marginStart="10dp"
        android:text="con4(32.00), sdxwdswd(2222.00)"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/container_icon"
        app:layout_constraintTop_toBottomOf="@+id/customer_name" />

    <ImageView
        android:id="@+id/security_number_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_queue_number"
        app:layout_constraintBottom_toBottomOf="@+id/security_numver"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/security_numver" />

    <TextView
        android:id="@+id/security_numver"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:text="30"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/security_number_icon"
        app:layout_constraintTop_toBottomOf="@+id/containers" />

    <ImageView
        android:id="@+id/driver_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_truck_driver"
        app:layout_constraintBottom_toBottomOf="@+id/driver_name"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/driver_name" />

    <TextView
        android:id="@+id/driver_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        android:gravity="center"
        android:text="ahmed"
        app:layout_constraintBottom_toBottomOf="@+id/national_id_number"
        app:layout_constraintEnd_toStartOf="@+id/national_id_icon"
        app:layout_constraintStart_toEndOf="@+id/plate_icon"
        app:layout_constraintTop_toTopOf="@+id/national_id_number" />

    <ImageView
        android:id="@+id/national_id_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="5dp"

        android:src="@drawable/ic_national_id"
        app:layout_constraintBottom_toBottomOf="@+id/national_id_number"
        app:layout_constraintEnd_toStartOf="@+id/national_id_number"
        app:layout_constraintTop_toTopOf="@+id/national_id_number" />

    <TextView
        android:id="@+id/national_id_number"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:text="28910190100474"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/security_numver" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/check_in_date_time"
        style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:hint="@string/check_in_date_time"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/driver_name"
        app:startIconDrawable="@drawable/ic_date_time"
        app:startIconTint="@null">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/select_date_time"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clickable="true"
            android:focusable="false"
            android:inputType="none"
            android:lines="1" />
    </com.google.android.material.textfield.TextInputLayout>
    <com.google.android.material.button.MaterialButton
        android:id="@+id/confirm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="@string/save"
        android:paddingHorizontal="90dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/check_in_date_time" />
</androidx.constraintlayout.widget.ConstraintLayout></ScrollView>