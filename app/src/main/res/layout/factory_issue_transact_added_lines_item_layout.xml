<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp">
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp">

    <TextView
        android:id="@+id/locator_code"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Locator1"
        android:gravity="center"
        android:textStyle="bold"
        android:textSize="17sp"
        android:layout_marginEnd="10dp"
        app:layout_constraintEnd_toStartOf="@+id/issue_qty"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/issue_qty"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="50"
        android:textColor="@color/green"
        app:layout_constraintBottom_toBottomOf="@+id/locator_code"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/locator_code" />

    <TextView
        android:id="@+id/lots_qtys"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:gravity="center"
        android:text="Lot1 ( 20 ), Lot2 ( 30 )"
        android:textStyle="italic"
        app:layout_constraintEnd_toStartOf="@+id/clear_item"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/locator_code" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/clear_item"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="?android:selectableItemBackground"
        android:insetLeft="0dp"
        android:insetTop="0dp"
        android:insetRight="0dp"
        android:insetBottom="0dp"
        app:icon="@drawable/ic_clear"
        app:iconGravity="textStart"
        app:iconPadding="0dp"
        app:iconTint="@color/black"
        app:layout_constraintBottom_toBottomOf="@+id/lots_qtys"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/lots_qtys" />
</androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>